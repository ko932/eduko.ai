rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Sessions
    match /sessions/{sessionId} {
      allow read: if isParticipant(sessionId) || isPublic(sessionId) || isAdmin();
      allow create: if request.auth != null;
      allow update: if isParticipant(sessionId) || isAdmin();
      allow delete: if request.auth != null && (resource.data.ownerUid == request.auth.uid || isAdmin());

      // Events
      match /events/{eventId} {
        allow read: if isParticipant(sessionId) || isPublic(sessionId) || isAdmin();
        allow create: if request.auth != null && (isParticipant(sessionId) || isServer());
        allow update, delete: if isAdmin() || (request.auth != null && resource.data.authorUid == request.auth.uid);
      }

      match /recordings/{recId} {
        allow read: if isParticipant(sessionId) || isAdmin();
        allow create: if request.auth != null && (isParticipant(sessionId) || isServer());
        allow delete: if isAdmin() || (request.auth != null && resource.data.ownerUid == request.auth.uid);
      }
    }

    // Assets
    match /assets/{assetId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Knowledge graph
    match /knowledge_graph/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Helpers
    function isAdmin() {
      return request.auth != null && request.auth.token != null && request.auth.token.admin == true;
    }

    function isServer() {
      return request.auth != null && request.auth.token.server == true;
    }

    function isPublic(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId)).data.isPublic == true;
    }

    function isParticipant(sessionId) {
      if (request.auth == null) return false;
      let s = get(/databases/$(database)/documents/sessions/$(sessionId));
      return s.exists() && (s.data.ownerUid == request.auth.uid || (s.data.participants is list && request.auth.uid in s.data.participants));
    }
  }
}
