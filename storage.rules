rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    match /avatars/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /environments/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Session recordings should be accessed via signed URLs from server.
    match /session-recordings/{sessionId}/{fileName} {
      // clients should NOT access directly; enforce server-side signed URLs in production.
      allow read, write: if false;
    }

    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    function isAdmin() {
      return request.auth != null && request.auth.token != null && request.auth.token.admin == true;
    }

    function isServer() {
      return request.auth != null && request.auth.token.server == true;
    }
  }
}
